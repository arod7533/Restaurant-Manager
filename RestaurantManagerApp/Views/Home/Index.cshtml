@{
    ViewData["Title"] = "Open Page";
    ViewData["Message"] = "Please have a manager open the day by logging in an reconciling the order items.";
}

<h3>@ViewData["Title"]</h3>
<br />
<div>@ViewData["Message"]</div>
<br />
<br />

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-sm-4">
            <form>
                <div class="form-group">
                    <label for="Manager Login">Manager Login:</label>
                    <br />
                    <input type="text" id="managerLogin" placeholder="User name" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Password">Password:</label>
                    <br />
                    <input type="text" id="passwordManager" placeholder="Password" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary" asp-controller="Home" asp-action="OpenPage">Submit</button>
            </form>
        </div>
    </div>
</div>








